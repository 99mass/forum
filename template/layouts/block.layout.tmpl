{{define "addPostForm"}}
     {{ if .Session }}
        <div class="new-post"><i class="fa-solid fa-plus"></i> New Post</div>
        <form class="form-new-post" action="/addpost" method="post">
          <!-- checbox -->
          <div class="select-opt">               
                <details>
                    <summary>Choose the categories</summary>
                    {{ range .Category}}
                      <input type="checkbox" name="category" value="{{.ID}}"  /><label>{{.NameCategory}}</label><br> 
                      {{end}}
                </details>
          </div>
          <div>
            <input type="text" name="title" id="title" placeholder="title post" required>
          </div>
          <div>
            <textarea name="content" id="content" cols="30" rows="5" required placeholder="Put the content here"></textarea>
          </div>
          <button type="submit">add post</button>
        </form>
    {{end}}
{{end}}


{{define "post"}}
<div class="categorie-specifique">
    <!-- posts -->
    <div class="title"><span> <i class="fa-solid fa-heading"></i>title:</span>{{.Posts.Title}}</div>

    <div><i class="fa-regular fa-comments"></i>{{.Posts.Content}}</div>

    <div class="author-date">
      <div><span><i class="fa-solid fa-at"></i>author:</span>{{.User.Username}} </div>
      <span>|</span>
      <div><span><i class="fa-solid fa-calendar-days"></i>date:</span>{{.Posts.CreatedAt}}</div>
    </div>

    <div class="like-dislik-content">
